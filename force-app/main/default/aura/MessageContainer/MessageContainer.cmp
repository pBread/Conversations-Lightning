<aura:component implements="force:hasRecordId">
  <aura:handler action="{!c.init}" name="init" value="{!this}" />

  <aura:attribute
    access="public"
    name="message"
    required="true"
    type="Object"
  />
  <aura:attribute
    access="public"
    name="record"
    required="true"
    type="Contact"
  />

  <div>{!v.message.author} - {!v.message.body}</div>
</aura:component>
