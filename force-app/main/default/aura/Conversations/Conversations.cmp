<aura:component
  controller="TwilioConversationApi"
  implements="flexipage:availableForRecordHome, force:hasRecordId"
>
  <aura:attribute name="state" type="String" />

  <aura:handler
    name="stateChange"
    value="{!v.state}"
    action="{!c.handleValueChange}"
  />

  <aura:registerEvent name="evDispatch" type="c:evDispatch" />
  <aura:handler
    action="{!c.subscribeToDispatch}"
    name="evDispatch"
    type="c:evDispatch"
  />

  <!-- UI -->
  <div class="c-header">
    <img height="50" width="50" src="{!$Resource.twilio_logo}" />
  </div>

  <lightning:button label="Tester" onclick="{!c.tester}" />
</aura:component>
