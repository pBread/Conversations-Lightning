<aura:component
  controller="TwilioConversationApi"
  implements="force:hasRecordId"
>
  <aura:handler action="{!c.init}" name="init" value="{!this}" />

  <aura:attribute
    access="public"
    name="conversationSid"
    required="true"
    type="String"
  />

  <div>Child: {!v.conversationSid}</div>
</aura:component>
